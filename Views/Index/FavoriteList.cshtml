
@{
    ViewData["Title"] = "FavoriteList";
    Layout = "~/Views/Shared/_Layout.cshtml";
	var LikeFilm=ViewBag.LikeFilm;
}

<div class="hero user-hero">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="hero-ct">
					<ul class="breadcumb">
						<li class="active"><a href="#">Home</a></li>
						<li> <span class="ion-ios-arrow-right"></span>Favorite movies</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="page-single userfav_list">
	<div class="container">
		<div class="row ipad-width2">
			<div class="col-md-3 col-sm-12 col-xs-12">
				<div class="user-information">
					<div class="user-fav">
						<p>Account Details</p>
						<ul>
							<li><a asp-action="Profile" asp-controller="Index">Profile</a></li>
							<li class="active"><a asp-action="FavoriteList" asp-controller="Index">Favorite movies</a></li>
						</ul>
					</div>
					<div class="user-fav">
						<p>Others</p>
						<ul>
							<li><a asp-action="Profile" asp-controller="Index">Change password</a></li>
							<li><a asp-action="Logout" asp-controller="Index">Log out</a></li>
						</ul>
					</div>
				</div>
			</div>
			<div class="col-md-9 col-sm-12 col-xs-12">
				<div class="topbar-filter user">
					<p>Found <span>@LikeFilm.Count</span> in total</p>
					<label>Sort by:</label>
					<select>
						<option value="range">-- Choose option --</option>
						<option value="saab">-- Choose option 2--</option>
					</select>
					<a href="userfavoritelist.html" class="list"><i class="ion-ios-list-outline active"></i></a>
				</div>
				@{
					for(int i = 0; i < LikeFilm.Count; i++)
                    {
                        <div class="flex-wrap-movielist user-fav-list">
                            <div class="movie-item-style-2">
                                <img src="@LikeFilm[i].UrlImg" alt="">
                                <div class="mv-item-infor">
                                    <h6><a asp-action="Detail" asp-route-id="@LikeFilm[i].IdFilm">"@LikeFilm[i].Name" <span>@LikeFilm[i].YearPublic</span></a></h6>
                                    <p class="rate"><i class="ion-android-star"></i><span>8.1</span> /10</p>
                                    <p class="describe">@LikeFilm[i].Description</p>
                                    <p class="run-time"> <span>MMPA:@LikeFilm[i].AgeLimit </span>    .    <span>Release:@LikeFilm[i].YearPublic</span></p>
                                </div>
                            </div>
                        </div>	
					}
                }
				
				<div class="topbar-filter">
					<label>Movies per page:</label>
					<select>
						<option value="range">5 Movies</option>
						<option value="saab">10 Movies</option>
					</select>
					
					<div class="pagination2">
						<span>Page 1 of 2:</span>
						<a class="active" href="#">1</a>
						<a href="#">2</a>
						<a href="#"><i class="ion-arrow-right-b"></i></a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
